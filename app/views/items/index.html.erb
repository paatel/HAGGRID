<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 .offset-md-3">
    <h1 align="center">All Items</h1>
  </div>
  </div>
  <div class="row">
    <% @items.each do |item| %>
  <div class="col-md-3">
      <div class="item-card">
        <div class="item-card-image">

        </div>
        <div class="item-card-content">
          <div class="item-card-title">
            <h4><%= item.name %></h4>
          </div>
          <div class="flex">
            <h4>Price: </h4><i class="fab fa-gg-circle"> <%= item.price %></i>
            <h4>Stats: </h4><p><%= item.stats %></p>
          </div>
        </div>
        <div class="item-card-actions">
          <%= link_to 'More info', item_path(item.id) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

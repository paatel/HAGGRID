<div>
  <div class="show-container">
    <div class="item_info">
      <h2><%= @item.name %></h2>
      <h4>Price: </h4><i class="fab fa-gg-circle"></i><p><%= @price %></p>
      <h4>Stats: </h4> <p><%= @item.stats %></p>
      <h4>Details: </h4> <p><%= @item.details %></p>
    </div>
    <div>
      <div class="item_picture">
        <!-- asset_path(@item.picture_url) -->
        <%= cl_image_tag @item.photo, height: 300, width: 300, crop: :fill %>
      </div>
      <div class="row">
        <div class="col-sm">col-sm</div>
        <div class="btn btn-success">
          <%link_to 'BUY NOW' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm">col-sm</div>
        <div class="btn btn-primary">
          <%= link_to 'Back to items', items_path %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm">col-sm</div>
        <div class="btn btn-primary">
          <%= link_to 'Add a review', reviews_item_path %>
        </div>
      </div>
    </div>
  </div>
  <div class="seller_info">
    <h3>Reviews</h3>
    <% @reviews = @item.reviews %>
    <% @reviews.each do |review| %>
    <% (review.rating).times do %> <i class="fa fa-star" aria-hidden="true"></i><% end %>
    <p><%= review.comment %></p>
    <% end %>
  </div>
</div>

<div class="btn btn-success">
  <%= link_to 'Haggle!',item_haggles_path(@item.id), method: :post %>
</div>

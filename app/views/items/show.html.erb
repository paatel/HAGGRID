<style type="text/css">
   body { background: #F2F4E7 !important; }
</style>

<div class="container">
  <div class="grid text-center">
    <div class="card image">
      <div class="">
        <!-- asset_path(@item.picture_url) -->
        <%= cl_image_tag @item.photo, height: 300, width: 300, crop: :fill %>
      </div>
    </div>

    <div class="card info">
      <div class="card-content">
        <h2><%= @item.name %></h2>
        <h4>Price:
          <i class="fab fa-gg-circle"> <% if @haggles.any? %>
            <%= @haggles.first.price %>
          <% else %>
            <%= @item.price %>
          <%end%></i>

        </h4>
        <h4 class="stats"><u>Stats</u></h4> <p><%= @item.stats %></p>
        <h4 class="details"><u>Details</u></h4> <p><%= @item.details %></p>
        <div class="buttons">
          <%= link_to 'Buy Now', purchase_item_path(@item), method: :postm, class: "btn btn-buy" %>
          <%= link_to 'Haggle!', haggle_item_path(@item), method: :post, class: "btn btn-haggle" %><div id="dice" onclick="javascript:stopstart()"></div>
        </div>
      </div>
    </div>

    <div class="card reviews">
      <div class="card-content">
        <%= link_to 'Add a Review', reviews_item_path, class: "btn btn-primary" %>
        <h3>Reviews</h3>
        <% @reviews = @item.reviews %>
        <% @reviews.each do |review| %>
          <div>
            <% (review.rating).times do %> <i class="fa fa-star" style="color: gold" aria-hidden="true"></i><% end %>
            <p><%= review.comment %></p>
            <p>With love: <%= review.buyer.first_name %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

